<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="194dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical"
        android:background="@drawable/textstyle"
        >

        <ImageView
            android:layout_width="18dp"
            android:layout_height="26dp"
            android:layout_gravity="right|clip_vertical"
            android:layout_marginLeft="310dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/shuqian" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/text_item_image"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/morentouxiang" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_item_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom|left"
                        android:text="未加载数据"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_item_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="bottom"
                        android:text="未加载数据"
                        android:textColor="@color/gray"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <!--        android:maxLines="3" 最大三行
             android:ellipsize="end" ....
            -->
            <TextView

                android:id="@+id/text_item_text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2.5"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="未加载数据"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_item_like"
                android:layout_width="23dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="00"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="点赞"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/text_item_collect"
                android:layout_width="23dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="00"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="收藏"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="100dp"
                android:gravity="left"
                android:text="0000-00-00 00:00:00"
                android:textColor="@color/gray"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>